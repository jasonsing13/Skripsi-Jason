<!DOCTYPE html>
<html lang="en">
<head>
    <title>List Admin</title>
    <%- include('partials/head.ejs') %>
    <%- include('partials/style.ejs') %>
</head>
<body>
    <%- include('partials/sidebar.ejs') %>
    <div class="container mt-4">
        <button class="btn btn-success float-end" data-bs-toggle="modal" data-bs-target="#modalAdd">Tambah</button>
        <h1>List Admin</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Kode</th>
                    <th>Nama</th>
                    <th>Phone Number</th>
                    <th>Role</th>
                    <!-- <th>Aksi</th> -->
                </tr>
            </thead>
            <tbody>
                <% vendor.forEach(function(vendor, i) { %>
                    <tr>
                        <td><%= vendor.id %></td>
                        <td><%= vendor.first_name + " " + vendor.last_name %></td>
                        <td><%= vendor.phone_number || "-" %></td>
                        <td><%= vendor.role_name || "-" %></td>
