<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dokumen Purchase Order</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <%- include('partials/style.ejs') %> 
</head>
<body>
    <%- include('partials/sidebar.ejs') %>
    <div class="container mt-4">
        <h1>Yayasan Bumi Baru</h1>
        <h2>PO-MML-2024-01</h2>
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link" href="/informasi-pengadaan?id=<%= pengadaan_id %>">Informasi Pengadaan</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/item-pengadaan?id=<%= pengadaan_id %>">Item Pengadaan</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/informasi-purchase-order?id=<%= pengadaan_id %>">Informasi Purchase Order</a>
            </li>
            <!-- <li class="nav-item">
                <a class="nav-link active" href="/dokumen-purchase-order?id=<%= pengadaan_id %>">Dokumen Purchase Order</a>
            </li> -->
        </ul>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">NO. ITEM</th>
                    <th scope="col">NAMA ITEM</th>
                    <th scope="col">QUANTITY</th>
                    <th scope="col">HARGA ITEM</th>
                    <th scope="col">TANGGAL PENGIRIMAN</th>
                    <th scope="col">STATUS</th>
                </tr>
            </thead>
            <tbody>
                <% items.forEach(function(item) { %>
                    <tr>
                        <td><%= item.no %></td>
                        <td><%= item.name %></td>
                        <td><%= item.quantity %></td>
                        <td><%= item.price %></td>
                        <td><%= item.deliveryDate %></td>
                        <td><%= item.status %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        <div class="mt-3">
            <button class="btn btn-primary" onclick="window.location.href='/download-po';">Download Dokumen PO</button>
        </div>
    </div>
<%- include('partials/footer.ejs') %>
</html>