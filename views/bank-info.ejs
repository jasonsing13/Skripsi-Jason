<head>
    <%- include('partials/head.ejs') %>
    <style>
        body {
            padding-top: 20px;
            padding-bottom: 40px;
        }
        .header {
            margin-bottom: 30px;
            text-align: center;
        }
        .form-section {
            margin-bottom: 20px;
        }
        .progress-bar {
            width: 50%; /* Increased as it's the second step */
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>MPM</h1>
            <h2>Registrasi Vendor</h2>
        </div>

        <div class="progress">
            <div class="progress-bar" role="progressbar" style="width: 50%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">Akun Bank</div>
        </div>

        <form action="/bank-info" method="POST">
            <div class="form-section">
                <h3>Akun Bank</h3>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="no_rek">Nomor Rekening</label>
                        <input type="text" class="form-control" id="no_rek" name="no_rek" required>
                    <div class="col-md-6 mb-3">
                        <label for="nama_pemilik">Nama Pemilik Rekening</label>
                        <input type="text" class="form-control" id="nama_pemilik" name="nama_pemilik" required>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 mb-3">
                        <label for="nama_bank">Nama Bank</label>
                        <select class="form-select" id="nama_bank" name="nama_bank">
                            <option selected>Pilih Nama Bank</option>
                            <option value="1">Bank A</option>
                            <option value="2">Bank B</option>
                        </select>
                    </div>
                </div>
            </div>

            <button type="button" class="btn btn-secondary" onclick="window.history.back();">Sebelumnya</button>
            <button type="submit" class="btn btn-primary">Selanjutnya</button>
        </form>
    </div>
</body>
</html>