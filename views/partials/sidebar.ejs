<div class="d-flex flex-column flex-shrink-0 p-3 bg-light" style="width: 280px; height: 100vh!important;">
    <div class="row">
        <div class="col-8">
            <a href="/" class="d-flex align-items-center ml-2 link-dark text-decoration-none">
                <span class="fs-4"><%= parent.isAdmin ? "Portal Admin" : "Portal Vendor" %></span>
            </a>
        </div>
        <div class="col-4">
            <!-- Default dropup button -->
            <div class="btn-group dropup">
                <button type="button" class="btn btn-outline-sucess dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                    <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24"><g fill="none"><path d="M24 0v24H0V0zM12.594 23.258l-.012.002l-.071.035l-.02.004l-.014-.004l-.071-.036c-.01-.003-.019 0-.024.006l-.004.01l-.017.428l.005.02l.01.013l.104.074l.015.004l.012-.004l.104-.074l.012-.016l.004-.017l-.017-.427c-.002-.01-.009-.017-.016-.018m.264-.113l-.014.002l-.184.093l-.01.01l-.003.011l.018.43l.005.012l.008.008l.201.092c.012.004.023 0 .029-.008l.004-.014l-.034-.614c-.003-.012-.01-.02-.02-.022m-.715.002a.023.023 0 0 0-.027.006l-.006.014l-.034.614c0 .012.007.02.017.024l.015-.002l.201-.093l.01-.008l.003-.011l.018-.43l-.003-.012l-.01-.01z"/><path fill="currentColor" d="M12 2a7 7 0 0 0-7 7v3.528a1 1 0 0 1-.105.447l-1.717 3.433A1.1 1.1 0 0 0 4.162 18h15.676a1.1 1.1 0 0 0 .984-1.592l-1.716-3.433a1 1 0 0 1-.106-.447V9a7 7 0 0 0-7-7m0 19a3.001 3.001 0 0 1-2.83-2h5.66A3.001 3.001 0 0 1 12 21"/></g></svg>
                </button>
                <ul class="dropdown-menu">
                    <li class="dropdown-item-text small">Notification</li>
                    <li><hr class="dropdown-divider"></li>
                    <% 
                    if (parent.notif.length > 0) { %>
                        <% parent.notif.forEach(n => { %>
                            <li class="dropdown-item-text small">
                                <span class="d-inline-block text-truncate" title="<%= n.isi %>" style="max-width: 300px;">
                                    <%= n.isi %>
                                </span><br>
                                <small><%= moment(n.cdate).calendar() %></small>
                            </li>
                        <% }) %>
                        <li><hr class="dropdown-divider"></li>
                        <a href="/list-notif" class="dropdown-item small">
                            <p class="m-0">Lihat Semua</p>
                        </a>
                    <% }else{ %>
                        <li class="dropdown-item-text small">Tidak Ada</li>
                    <% } %>
                </ul>
            </div>
        </div>
    </div>
  <hr>
    <ul class="nav nav-pills flex-column mb-auto gap-2">
        <% if(parent.isAdmin){ %>
            <li class="nav-item">
                <a href="/dashboard-admin" class="nav-link <%= page == 'dashboard' ? 'active text-white' : 'link-dark' %>" aria-current="page">
                    Dashboard
                </a>
            </li>
            <li>
                <a href="/daftar-pengadaan-admin" class="nav-link <%= page == 'pengadaan' ? 'active text-white' : 'link-dark' %>">
                    Pengadaan
                </a>
            </li>
            <li>
                <a href="/list-vendor-admin" class="nav-link <%= page == 'list-vendor' ? 'active text-white' : 'link-dark' %>">
                    List Vendor
                </a>
            </li>
            <li>
                <a href="/list-admin" class="nav-link <%= page == 'list-admin' ? 'active text-white' : 'link-dark' %>">
                    List Admin
                </a>
            </li>
            <li>
                <a href="/list-barang" class="nav-link <%= page == 'list-barang' ? 'active text-white' : 'link-dark' %>">
                    List Barang & Jasa
                </a>
            </li>
        <% }else{ %>
            <% if (parent.status_verifikasi_id == 'bec6ed04-e967-4ce8-8865-e6285690174e') { %>
            <li class="nav-item">
                <a href="/dashboard-vendor" class="nav-link <%= page == 'dashboard' ? 'active text-white' : 'link-dark' %>" aria-current="page">
                    Dashboard
                </a>
            </li>
            <li>
                <a href="/daftar-pengadaan" class="nav-link <%= page == 'pengadaan' ? 'active text-white' : 'link-dark' %>">
                    Pengadaan
                </a>
            </li>
            <% } %>
            
        <% } %>
        <li class="border-top my-3"></li>
        <li class="nav-item">
            <button class="btn btn-toggle align-items-center rounded collapsed" data-bs-toggle="collapse" data-bs-target="#account-collapse" aria-expanded="false">
            Account
            </button>
            <div class="collapse show" id="account-collapse">
            <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                <li><a href="<%= !parent.isAdmin ? "/approved-vendor-profile" : "/admin-profile" %>" class="nav-link link-dark rounded  <%= page == 'profile' ? 'active text-white' : 'link-dark' %>">Profile</a></li>
                <li><a href="/logout" class="link-dark rounded">Sign out</a></li>
            </ul>
            </div>
        </li>
    </ul>
</div>
