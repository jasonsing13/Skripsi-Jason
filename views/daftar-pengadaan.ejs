<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head.ejs') %>
    <title>Daftar Pengadaan Vendor</title>
    <%- include('partials/style.ejs') %> 
    <style>
        body {
            padding: 20px;
        }
        .header {
            margin-bottom: 30px;
            text-align: center;
        }
        .container {
            background-color: #f8f9fa;
            border-radius: 8px;
            padding: 20px;
        }
        .alert {
            color: #856404;
            background-color: #fff3cd;
            border-color: #ffeeba;
        }
    </style>
</head>
<body>
    <%- include('partials/sidebar.ejs') %>
    <div class="container mt-4">
        <h1>Daftar Pengadaan</h1>
        <p>Informasi daftar pengadaan</p>
        <div class="mb-3">
            <input type="text" class="form-control" placeholder="Cari Pengadaan">
        </div>
        <!-- <div class="d-flex justify-content-between mb-3">            
            <select class="form-select w-auto">
                <option selected>Semua Status</option>
                <option value="open">Buka</option>
                <option value="closed">Tutup</option>
            </select>
        </div> -->
        <div class="d-flex justify-content-between mb-3">
            <select class="form-select w-auto" id="filter-status" onchange="filterByStatus('<%= parent.id%>')">
                <option selected value="">Semua Status</option>
                <% status.forEach(status => { %>
                    <option value="<%= status.status_id %>" <%= status.status_id == status_id ? 'selected' : '' %> ><%= status.nama_status %></option>
                <% }); %>
            </select>
        </div>        
        <table class="table">
            <thead>
                <tr>
                    <th>Nomor Procurement</th>
                    <th>Nama Pengadaan</th>
                    <th>Tanggal Permintaan</th>
                    <th>Jenis Pengadaan</th>
                    <th>Jenis Pemilihan</th>
                    <th>Jenis Vendor</th>
                    <th>Status</th>
                    <th>Aksi</th>
                </tr>
            </thead>
            <tbody>
                <% if(pengadaan.length > 0){
                    pengadaan.forEach(function(pengadaan) { %>
                    <tr>
                        <td><%= pengadaan.pengadaan_id %></td>
                        <td><%= pengadaan.nama_pengadaan %></td>
                        <td><%= pengadaan.tanggal_permintaan || "-"  %></td>
                        <td><%= pengadaan.nama_jenis_pengadaan || "-" %></td>
                        <td><%= pengadaan.nama_tipe_pemilihan || "-" %></td>
                        <td><%= pengadaan.nama_jenis_vendor || "-" %></td>
                        <td><%= pengadaan.nama_status %></td>
                        <td>
                            <form action="<%= pengadaan.status_id == '760ad69f-7739-41e1-baf9-7a68665b21e8' ? '/informasi-pengadaan-approved' : '/informasi-pengadaan' %>" method="get">
                                <input type="hidden" name="id" value="<%= pengadaan.pengadaan_id %>">
                                <button class="btn btn-orange" type="submit">Detail</button>
                            </form>
                        </td>
                    </tr>
                <% });
                }else{ %>
                    <tr>
                        <td colspan="10">No Data</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">Next</a></li>
            </ul>
        </nav>
        </div>
        <script>
            function filterByStatus() {
                const statusId = document.getElementById('filter-status').value;
                const url = statusId ? `/daftar-pengadaan/status/${statusId}` : '/daftar-pengadaan';
                window.location.href = url;
            }
        </script>
<%- include('partials/footer.ejs') %>
</html>
