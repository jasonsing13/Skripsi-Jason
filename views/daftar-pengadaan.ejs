<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Daftar Pengadaan</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            padding-top: 20px;
        }
        .container {
            margin-left: 280px; /* Adjust based on sidebar width */
        }
    </style>
</head>
<body>
    <%- include('partials/sidebar.ejs') %>
    <div class="container">
        <h2>Daftar Pengadaan</h2>
        <p>Informasi daftar pengadaan</p>
        <div class="mb-3">
            <input type="text" class="form-control" placeholder="Cari Pengadaan">
        </div>
        <div class="dropdown mb-3">
            <select class="form-select">
                <option selected>Semua Vendor</option>
                <option value="1">Vendor 1</option>
                <option value="2">Vendor 2</option>
            </select>
        </div>
        <div class="dropdown mb-3">
            <select class="form-select">
                <option selected>Semua Status</option>
                <option value="open">Open</option>
                <option value="closed">Closed</option>
            </select>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Nomor Procurement</th>
                    <th scope="col">Nama Pengadaan</th>
                    <th scope="col">Tanggal Mulai</th>
                    <th scope="col">Tanggal Selesai</th>
                    <th scope="col">Jenis Pengadaan</th>
                    <th scope="col">Status</th>
                    <th scope="col">Aksi</th>
                </tr>
            </thead>
            <tbody>
                <% pengadaans.forEach(function(pengadaan) { %>
                    <tr>
                        <td><%= pengadaan.procurementNumber %></td>
                        <td><%= pengadaan.procurementName %></td>
                        <td><%= pengadaan.startDate %></td>
                        <td><%= pengadaan.endDate %></td>
                        <td><%= pengadaan.type %></td>
                        <td><%= pengadaan.status %></td>
                        <td>
                            <button class="btn btn-primary">Detail</button>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        <!-- Pagination -->
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">Next</a></li>
            </ul>
        </nav>
    </div>
</body>
</html>