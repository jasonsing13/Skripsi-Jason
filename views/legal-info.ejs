<!-- legal-info.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registrasi Vendor - Legalitas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            padding-top: 20px;
            padding-bottom: 40px;
        }
        .header {
            margin-bottom: 30px;
            text-align: center;
        }
        .form-section {
            margin-bottom: 20px;
        }
        .progress-bar {
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>MPM</h1>
            <h2>Registrasi Vendor</h2>
        </div>

        <div class="progress">
            <div class="progress-bar" role="progressbar" style="width: 100%;" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">Legalitas</div>
        </div>

        <form action="/legal-info" method="POST">
            <div class="form-section">
                <h3>Informasi Legalitas</h3>
                <div class="mb-3">
                    <label for="no_nibrba">NOMOR NIB RBA</label>
                    <input type="text" class="form-control" id="no_nibrba" name="no_nibrba" required>
                </div>
                <div class="mb-3">
                    <label for="no_ktp_direktur">NOMOR KTP DIREKTUR/PEMILIK</label>
                    <input type="text" class="form-control" id="no_ktp_direktur" name="no_ktp_direktur" required>
                </div>
            </div>
            <input type="hidden" name="vendor_id" value="<%= vendor_id %>">
            <button type="button" class="btn btn-secondary" onclick="window.history.back();">Sebelumnya</button>
            <button type="submit" class="btn btn-primary">Simpan</button>
        </form>
    </div>
<%- include('partials/footer.ejs') %>
</html>
