<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head.ejs') %>
    <%- include('partials/style.ejs') %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>List Vendor Admin</title>
</head>
<body>
    <%- include('partials/sidebar.ejs') %>
    <div class="container mt-4">
        <h1>List Vendor</h1>
        <p>List Vendor Aktif</p>
        <table class="table">
            <thead>
                <tr>
                    <th>Kode Vendor</th>
                    <th>Nama Vendor</th>
                    <th>Kategori Vendor</th>
                    <th>Jenis Vendor</th>
                    <th>Status</th>
                    <th>Aksi</th>
                </tr>
            </thead>
            <tbody>
                <% vendor.forEach(function(vendor) { %>
                    <tr>
                        <td><%= vendor.vendor_id %></td>
                        <td><%= vendor.nama_vendor %></td>
                        <td><%= vendor.nama_kategori_vendor %></td>
                        <td><%= vendor.nama_jenis_vendor %></td>
                        <td><%= vendor.status_vendor %></td>
                        <td>
                            <form action="/approval-vendor-admin" method="get">
                                <input type="hidden" name="vendor_id" value="<%= vendor.vendor_id %>">
                                <button type="submit" class="btn btn-primary">Detail</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>