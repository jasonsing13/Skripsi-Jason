<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head.ejs') %>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Daftar Pengadaan Vendor</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <%- include('partials/style.ejs') %> 
    <style>
        body {
            padding: 20px;
        }
        .header {
            margin-bottom: 30px;
            text-align: center;
        }
        .container {
            background-color: #f8f9fa;
            border-radius: 8px;
            padding: 20px;
        }
        .alert {
            color: #856404;
            background-color: #fff3cd;
            border-color: #ffeeba;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h1>Daftar Pengadaan</h1>
        <p>Informasi daftar pengadaan</p>
        <div class="mb-3">
            <input type="text" class="form-control" placeholder="Cari Pengadaan">
        </div>
        <div class="d-flex justify-content-between mb-3">
            <!-- <select class="form-select w-auto">
                <option selected>Semua Vendor</option>
                <option value="1">Vendor 1</option>
                <option value="2">Vendor 2</option>
                <option value="3">Vendor 3</option>
                <option value="4">Vendor 4</option>
                <option value="5">Vendor 5</option>
                <option value="6">Vendor 6</option>
            </select> -->
            <select class="form-select w-auto" id="filter-status" onchange="filterByStatus()">
                <option selected value="">Semua Status</option>
                <% status.forEach(status => { %>
                    <option value="<%= status.status_id %>"><%= status.nama_status %></option>
                <% }); %>
            </select>
            <button class="btn btn-primary" onclick="location.href='/buat-pengadaan'">Tambah Pengadaan</button>        
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Nomor Procurement</th>
                    <th>Nama Pengadaan</th>
                    <th>Tanggal Mulai</th>
                    <th>Tanggal Selesai</th>
                    <th>Jenis Vendor</th>
                    <th>Status</th>
                    <th>Aksi</th>
                </tr>
            </thead>
            <tbody>
                <% pengadaan.forEach(function(pengadaan) { %>
                <tr>
                    <td><%= pengadaan.pengadaan_id %></td>
                    <td><%= pengadaan.nama_pengadaan %></td>
                    <td><%= pengadaan.tanggal_pemilihan %></td>
                    <td><%= pengadaan.tanggal_pemilihan_selesai %></td>
                    <td><%= pengadaan.jenis_pengadaan %></td>
                    <td><%= pengadaan.nama_status %></td>
                    <td>
                        <button class="btn btn-orange" onclick="location.href='informasi-pengadaan-previous'">Detail</button>                    
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">Next</a></li>
            </ul>
        </nav>
    </div>
    <script>
        function filterByStatus() {
            const statusId = document.getElementById('filter-status').value;
            const url = statusId ? `/daftar-pengadaan/status/${statusId}` : '/daftar-pengadaan';
            window.location.href = url;
        }
    </script>
</body>
</html>