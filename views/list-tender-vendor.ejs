<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head.ejs') %>
    <%- include('partials/style.ejs') %>
    <title>Tender List</title>
</head>
<body>
    <%- include('partials/sidebar.ejs') %>
    <div class="container mt-4">
        <h2>Tender</h2>
        <p>Lihat semua Tender</p>
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" href="/list-tender-vendor">Informasi Pengadaan</a>
            </li>
            <li class="nav-item">
                <a class="nav-link " href="/status-tender-vendor">Item Pengadaan</a>
            </li>
        </ul>
        <table class="table">
            <thead>
                <tr>
                    <th>Nomor Tender</th>
                    <th>Nama Pengadaan</th>
                    <th>Jenis Pengadaan</th>
                    <th>Nama Barang</th>
                    <th>Harga Rekomendasi</th>
                    <th>Jumlah Barang</th>
                    <th>Aksi</th>
                </tr>
            </thead>
            <tbody>
                <% bidding_tender.forEach(function(bidding_tender) { %>
                <tr>
                    <td><%= bidding_tender.bt_id %></td>
                    <td><%= bidding_tender.nama_pengadaan %></td>
                    <td><%= bidding_tender.nama_jenis_pengadaan %></td>
                    <td><%= bidding_tender.nama_item %></td>
                    <td><%= bidding_tender.harga_item %></td>
                    <td><%= bidding_tender.jumlah_item %></td>
                    <td>
                        <form action="/form-tender/<%= bidding_tender.bt_id %>" method="get">
                            <button type="submit" class="btn btn-primary">Ajukan</button>
                        </form>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">Next</a></li>
            </ul>
        </nav>
    </div>
<%- include('partials/footer.ejs') %>
</html>