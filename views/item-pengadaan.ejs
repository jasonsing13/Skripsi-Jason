<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Item Pengadaan</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <%- include('partials/style.ejs') %> 
</head>
<body>
    <%- include('partials/sidebar.ejs') %>
    <div class="container mt-4">
        <h1>Item Pengadaan</h1>
        <% if(pengadaanUser.status_id != '9e18ab27-4557-41eb-b3c1-430c67377830'){ %>
            <div class="d-flex justify-content-end align-items-start mb-3">
                <% if (pengadaan.tipe_pemilihan_id == '4ff07c90-7efb-4a4a-8715-d53748a387d6') { %>
                        <button class="btn btn-success" onclick="location.href='/form-bidding/<%= pengadaan_id %>'">Form Bidding</button>        
                <% } %>
            </div>        
        <% } %>  
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link" href="/informasi-pengadaan?id=<%= pengadaan_id %>">Informasi Pengadaan</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="/item-pengadaan?id=<%= pengadaan_id %>">Item Pengadaan</a>
            </li>
            <% if (pengadaan.status_id == '9e18ab27-4557-41eb-b3c1-430c67377830') { %>
                <li class="nav-item">
                    <a class="nav-link" href="/informasi-purchase-order?id=<%= pengadaan_id %>">Informasi Purchase Order</a>
                </li>
                <!-- <li class="nav-item">
                    <a class="nav-link" href="/dokumen-purchase-order?id=<%= pengadaan_id %>">Dokumen Purchase Order</a>
                </li> -->
            <% } %>
        </ul>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">NO. ITEM</th>
                    <th scope="col">NAMA PENGADAAN</th>
                    <th scope="col">QUANTITY</th>
                    <th scope="col">HARGA ITEM</th>
                    <!-- <th scope="col">DISKON</th> -->
                    <th scope="col">NET AMOUNT</th>
                </tr>
            </thead>
            <tbody>
                <% item.forEach(function(item, i) { %>
                    <tr>
                        <td><%= i+1 %></td>
                        <td><%= item.nama_item %></td>
                        <td class="qty"><%= item.quantity %></td>
                        <td class="currency"><%= item.harga_item %></td>
                        <td class="currency"><%= item.harga_total %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
<%- include('partials/footer.ejs') %>
</html>