<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Item Pengadaan</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <%- include('partials/style.ejs') %> 
</head>
<body>
    <%- include('partials/sidebar.ejs') %>
    <div class="container mt-4">
        <h1>Yayasan Bumi Baru</h1>
        <h2>PO-MML-2024-01</h2>
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link" href="/informasi-pengadaan">Informasi Pengadaan</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="/item-pengadaan">Item Pengadaan</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/informasi-purchase-order">Informasi Purchase Order</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/dokumen-purchase-order">Dokumen Purchase Order</a>
            </li>
        </ul>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">NO. ITEM</th>
                    <th scope="col">NAMA PENGADAAN</th>
                    <th scope="col">QUANTITY</th>
                    <th scope="col">HARGA ITEM</th>
                    <th scope="col">DISKON</th>
                    <th scope="col">NET AMOUNT</th>
                </tr>
            </thead>
            <tbody>
                <% items.forEach(function(item) { %>
                    <tr>
                        <td><%= item.no %></td>
                        <td><%= item.name %></td>
                        <td><%= item.quantity %></td>
                        <td><%= item.price %></td>
                        <td><%= item.discount %></td>
                        <td><%= item.netAmount %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>