<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Buat Pengadaan</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <%- include('partials/style.ejs') %>
</head>
<body>
    <%- include('partials/sidebar.ejs') %>
    <div class="container p-4">
        <h1>Buat Pengadaan</h1>
        <form action="buat-pengadaan" method="post">
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="nama_pengadaan" class="form-label">Nama Pengadaan*</label>
                        <input type="text" class="form-control" id="nama_pengadaan" name="nama_pengadaan" required>
                    </div>
                    <div class="mb-3">
                        <label for="tipe_pemilihan" class="form-label">Tipe Pemilihan*</label>
                        <select class="form-select" id="tipe_pemilihan" name="tipe_pemilihan" required>
                            <option selected>Choose...</option>
                            <% option_Tipe_Pemilihan1.forEach(option => { %>
                                <option value="<%= option.tipe_pemilihan_id %>"><%= option.nama_tipe_pemilihan %></option>
                            <% }); %>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="jenis_pengadaan" class="form-label">Jenis Pengadaan*</label>
                        <select class="form-select" id="jenis_pengadaan" name="jenis_pengadaan" required>
                            <option selected>Choose...</option>
                            <% option_Jenis_Pengadaan.forEach(option => { %>
                                <option value="<%= option.jenis_pengadaan_id %>"><%= option.nama_jenis_pengadaan %></option>
                            <% }); %>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="jenis_vendor" class="form-label">Jenis Vendor*</label>
                        <select class="form-select" id="jenis_vendor" name="jenis_vendor" required>
                            <option selected>Choose...</option>
                            <% option_Jenis_Vendor.forEach(option => { %>
                                <option value="<%= option.jenis_vendor_id %>"><%= option.nama_jenis_vendor %></option>
                            <% }); %>
                        </select>                    
                    </div>
                    <div class="mb-3">
                        <label for="termin_pembayaran" class="form-label">Termin Pembayaran* (hari)</label>
                        <input type="text" class="form-control" id="termin_pembayaran" name="termin_pembayaran">
                    </div>

                <input type="hidden" name="create_by" value="user_id"> <!-- Set user_id here -->
                <input type="hidden" name="create_date" value="2024-05-22"> <!-- Set current date here -->
                
            </div>
                <div class="col-md-6">
             <h4>Detail Item</h4>
    <div id="itemDetails">
        <div class="mb-3">
            <label for="nama_item" class="form-label">Nama Barang*</label>
            <input type="text" class="form-control" id="nama_item" name="nama_item" required>
        </div>
        <div class="mb-3">
            <label for="harga_item" class="form-label">Harga Barang*</label>
            <input type="number" class="form-control" id="harga_item" name="harga_item" required>
        </div>
        <div class="mb-3">
            <label for="jumlah_item" class="form-label">Jumlah Barang*</label>
            <input type="number" class="form-control" id="jumlah_item" name="jumlah_item" required>
        </div>
        <button type="button" class="btn btn-secondary" onclick="addItem()">Tambah Item</button>
    </div>
    <div id="additionalItems"></div>
    <input type="hidden" name="items" id="itemsInput">
    <button type="submit" class="btn btn-primary mt-3">Buat Pengadaan</button>
</form>

<script>
function addItem() {
    const itemDetails = document.getElementById('itemDetails');
    const additionalItems = document.getElementById('additionalItems');

    // Clone the itemDetails div and remove the add button from the clone
    const newItem = itemDetails.cloneNode(true);
    newItem.querySelector('button').remove();

    // Clear input values in the cloned div
    newItem.querySelectorAll('input').forEach(input => {
        input.value = '';
    });

    additionalItems.appendChild(newItem);
}

document.getElementById('pengadaanForm').onsubmit = function() {
    const items = [];
    document.querySelectorAll('#itemDetails, #additionalItems .itemDetails').forEach(itemDiv => {
        const nama_item = itemDiv.querySelector('[name="nama_item"]').value;
        const jumlah_item = itemDiv.querySelector('[name="jumlah_item"]').value;
        const harga_item = itemDiv.querySelector('[name="harga_item"]').value;
        items.push({ nama_item, jumlah_item, harga_item });
    });
    document.getElementById('itemsInput').value = JSON.stringify(items);
};
</script>
</body>
</html>
